@model IEnumerable<Ibi.TimesheetDiary.SubProject>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { projectCode = ViewBag.ProjectCode })
</p>
<table>
    <tr>
        <th>
            SubNumber
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { projectCode = item.Project.ProjectCode, subNumber = item.SubNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.SubProjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SubProjectId })
        </td>
    </tr>
}

</table>
